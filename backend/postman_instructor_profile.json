{
  "info": {
    "name": "Instructor Profile Management",
    "description": "Collection để quản lý hồ sơ giảng viên từ role sinh viên",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"sinhvien@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.data.token);",
                  "    console.log('Token saved:', response.data.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"quantrivien@gmail.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Student Instructor Profile",
      "item": [
        {
          "name": "Get My Instructor Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/instructor-profile/my",
              "host": ["{{base_url}}"],
              "path": ["users", "instructor-profile", "my"]
            }
          }
        },
        {
          "name": "Submit Instructor Profile",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "experience_years",
                  "value": "5",
                  "type": "text"
                },
                {
                  "key": "specializations",
                  "value": "[\"Web Development\", \"Mobile Development\"]",
                  "type": "text"
                },
                {
                  "key": "teaching_experience",
                  "value": "{\"years\": 3, \"description\": \"Tôi đã có 3 năm kinh nghiệm giảng dạy tại các trung tâm đào tạo công nghệ thông tin. Chuyên về lập trình web và mobile development.\"}",
                  "type": "text"
                },
                {
                  "key": "certificates",
                  "value": "[{\"name\": \"Cử nhân Công nghệ thông tin\", \"major\": \"Công nghệ thông tin\", \"issuer\": \"Đại học Bách Khoa Hà Nội\", \"year\": 2020}]",
                  "type": "text"
                },
                {
                  "key": "demo_video",
                  "value": "https://youtube.com/watch?v=example",
                  "type": "text"
                },
                {
                  "key": "certificate_files",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "cv_file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "other_documents",
                  "value": "[{\"name\": \"Chứng chỉ TOEIC\", \"description\": \"Chứng chỉ tiếng Anh quốc tế\"}]",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/users/instructor-profile/submit",
              "host": ["{{base_url}}"],
              "path": ["users", "instructor-profile", "submit"]
            }
          }
        },
        {
          "name": "Update Instructor Profile",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "experience_years",
                  "value": "6",
                  "type": "text"
                },
                {
                  "key": "specializations",
                  "value": "[\"Web Development\", \"Mobile Development\", \"Data Science\"]",
                  "type": "text"
                },
                {
                  "key": "teaching_experience",
                  "value": "{\"years\": 4, \"description\": \"Tôi đã có 4 năm kinh nghiệm giảng dạy tại các trung tâm đào tạo công nghệ thông tin. Chuyên về lập trình web, mobile development và data science.\"}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/users/instructor-profile/update",
              "host": ["{{base_url}}"],
              "path": ["users", "instructor-profile", "update"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Management",
      "item": [
        {
          "name": "Get Pending Instructor Profiles",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/instructors/pending?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["users", "instructors", "pending"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Pending Instructor Detail",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/instructors/pending/INSTRUCTOR_ID_HERE",
              "host": ["{{base_url}}"],
              "path": ["users", "instructors", "pending", "INSTRUCTOR_ID_HERE"]
            }
          }
        },
        {
          "name": "Approve Instructor Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/instructors/INSTRUCTOR_ID_HERE/approval",
              "host": ["{{base_url}}"],
              "path": ["users", "instructors", "INSTRUCTOR_ID_HERE", "approval"]
            }
          }
        },
        {
          "name": "Reject Instructor Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"rejected\",\n  \"rejection_reason\": \"Hồ sơ chưa đầy đủ thông tin kinh nghiệm giảng dạy. Vui lòng bổ sung thêm chi tiết về các khóa học đã giảng dạy.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/instructors/INSTRUCTOR_ID_HERE/approval",
              "host": ["{{base_url}}"],
              "path": ["users", "instructors", "INSTRUCTOR_ID_HERE", "approval"]
            }
          }
        }
      ]
    },
    {
      "name": "Test Cases",
      "item": [
        {
          "name": "Test Submit Without Required Fields",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "experience_years",
                  "value": "5",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/users/instructor-profile/submit",
              "host": ["{{base_url}}"],
              "path": ["users", "instructor-profile", "submit"]
            }
          }
        },
        {
          "name": "Test Submit Without Certificate Files",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "experience_years",
                  "value": "5",
                  "type": "text"
                },
                {
                  "key": "specializations",
                  "value": "[\"Web Development\"]",
                  "type": "text"
                },
                {
                  "key": "teaching_experience",
                  "value": "{\"years\": 3, \"description\": \"Kinh nghiệm giảng dạy\"}",
                  "type": "text"
                },
                {
                  "key": "certificates",
                  "value": "[{\"name\": \"Cử nhân CNTT\", \"major\": \"CNTT\", \"issuer\": \"ĐH Bách Khoa\", \"year\": 2020}]",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/users/instructor-profile/submit",
              "host": ["{{base_url}}"],
              "path": ["users", "instructor-profile", "submit"]
            }
          }
        },
        {
          "name": "Test Reject Without Reason",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"rejected\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/instructors/INSTRUCTOR_ID_HERE/approval",
              "host": ["{{base_url}}"],
              "path": ["users", "instructors", "INSTRUCTOR_ID_HERE", "approval"]
            }
          }
        }
      ]
    }
  ]
} 